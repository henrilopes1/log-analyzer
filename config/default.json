{
    "brute_force": {
        "threshold": 5,
        "time_window_minutes": 1
    },
    "port_scan": {
        "threshold": 10,
        "time_window_minutes": 1
    },
    "geographic": {
        "enabled": true,
        "timeout_seconds": 5,
        "api_url": "http://ip-api.com/json",
        "rate_limit_delay": 1.5,
        "high_risk_countries": ["CN", "RU", "KP", "IR", "BY"]
    },
    "risk_classification": {
        "high_threshold": 10,
        "medium_threshold": 5
    },
    "export": {
        "default_filename": "suspect_ips.csv",
        "auto_timestamp": false
    },
    "logging": {
        "level": "INFO",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "file": "log_analyzer.log"
    }
}